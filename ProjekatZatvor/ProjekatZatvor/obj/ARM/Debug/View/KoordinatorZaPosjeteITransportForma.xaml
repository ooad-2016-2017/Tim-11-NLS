<Page
    x:Class="ProjekatZatvor.KoordinatorZaPosjeteITransportForma"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProjekatZatvor"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <Frame x:ConnectionId='1' Name="GlavniFrame">
            
  
    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <RelativePanel>
            <Button x:ConnectionId='8' Name="PrikaziMeni" FontFamily="Segoe MDL2 Assets" Content="&#xE700;"
FontSize="36" VerticalAlignment="Top"                          />
        </RelativePanel>
        <Button x:ConnectionId='2'                      Grid.Column="1" Background="White" HorizontalAlignment="Right" Width="150" Height="70"  >
            <Image Source="Assets/logout1.png" Stretch="Fill"></Image>
        </Button>
        <SplitView x:ConnectionId='3' Name="MojSplitView"
         Grid.Row="1"
         
         PaneBackground="IndianRed"
         DisplayMode="CompactOverlay"
         HorizontalAlignment="Stretch"
         OpenPaneLength="200"
         CompactPaneLength="56" >
            <SplitView.Pane >

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                        <RowDefinition Height="50" />
                        <RowDefinition Height="50" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Source="Assets/rasporedposjeta.jpg"  Height="50" Width="55" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="-3,0,147,0"  />
                    <TextBlock x:ConnectionId='4' Text="Raspored posjeta" Foreground="White"                                 Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                    <Image Source="Assets/posjetilac.jpg" Height="50" Width="50" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="-3,0,147,0" />
                    <TextBlock x:ConnectionId='5' Text="Posjetioci" Foreground="White"                            Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                    <Image Source="Assets/rasporedtransporta.jpg" Height="50" Width="55" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="-3,0,147,0" />
                    <TextBlock x:ConnectionId='6' Text="Raspored transporta" Foreground="White"                                    Grid.Row="2" Grid.Column="1"  HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>

                </Grid>

            </SplitView.Pane>
            <SplitView.Content >

                <Frame x:ConnectionId='7' x:Name="Frejm" ></Frame>
            </SplitView.Content>

        </SplitView>
    </Grid>
        </Frame>
    </Grid>
</Page>

