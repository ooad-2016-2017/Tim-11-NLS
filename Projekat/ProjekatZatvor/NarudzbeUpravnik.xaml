        <FlipView x:Name="flipView" HorizontalAlignment="Left" Margin="22,69,0,0" VerticalAlignment="Top" Width="150" Height="118"/>
        
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="22,250,0,0" TextWrapping="Wrap" Text="Posljednje narudzbe:" VerticalAlignment="Top" RenderTransformOrigin="0.484,-0.9"/>
        <FlipView x:Name="flipViewdopust" HorizontalAlignment="Left" Margin="22,290,0,0" VerticalAlignment="Top" Width="150" Height="118"/>
        <ListView x:Name="listViewdopust" HorizontalAlignment="Left" Height="100" Margin="22,290,0,0" VerticalAlignment="Top" Width="100"/>
        
    </Grid>
</Page>
