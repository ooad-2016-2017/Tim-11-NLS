<Page
    x:Class="ProjekatZatvor.PodnesiZahtjev"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProjekatZatvor"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock HorizontalAlignment="Left" Margin="27,21,0,0" TextWrapping="Wrap" Text="Zahtjev za:" VerticalAlignment="Top"/>
        <RadioButton x:ConnectionId='1' x:Name="radioButtonBolovanje" Content="Bolovanje" HorizontalAlignment="Left" Margin="25,62,0,0" VerticalAlignment="Top"/>
        <RadioButton x:ConnectionId='2' x:Name="radioButtonOdmor" Content="Godisnji odmor" HorizontalAlignment="Left" Margin="25,100,0,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="27,150,0,0" TextWrapping="Wrap" Text="Datum odlaska" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="27,200,0,0" TextWrapping="Wrap" Text="Datum povratka" VerticalAlignment="Top" RenderTransformOrigin="0.533,1.65"/>

        <CalendarDatePicker HorizontalAlignment="Left" Margin="140,143,0,0" VerticalAlignment="Top" Width="183"/>
        <CalendarDatePicker HorizontalAlignment="Left" Margin="140,192,0,0" VerticalAlignment="Top" Width="182"/>
        <CalendarView HorizontalAlignment="Left" Margin="27,238,0,0" VerticalAlignment="Top" Height="319"/>
        <Button x:ConnectionId='3' x:Name="button" Content="Podnesi zahtjev" HorizontalAlignment="Left" Margin="202,565,0,0" VerticalAlignment="Top"/>
    </Grid>
</Page>

